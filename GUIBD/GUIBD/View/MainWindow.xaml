                            <RowDefinition Height="137*" />
                            <RowDefinition Height="22*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <ListView Name="ListaZgloszen">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Przyjęto" Width="Auto"/>
