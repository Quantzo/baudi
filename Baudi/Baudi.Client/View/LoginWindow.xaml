<Window x:Class="Baudi.Client.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="150" Style="{StaticResource WindowStyle}" Width="350">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="290*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Label Style="{StaticResource LabelStyle}"  Content="Login" />
        <TextBox Style="{StaticResource TextBoxStyle}"  Grid.Column="1" Text="{Binding Username}" HorizontalContentAlignment="Center"/>

        <Label Style="{StaticResource LabelStyle}" Grid.Row="1"  Content="Hasło" />
        <PasswordBox  Grid.Row="1" Height="25" Grid.Column="1" x:Name="PasswordBox" />

        <Button Style="{StaticResource SaveButton}" Grid.Column="1" Grid.Row="2" Command="{Binding ButtonLogin}" Content="Zaloguj" />
        <Button Style="{StaticResource CancelButton}" Grid.Column="1" Grid.Row="2" Command="{Binding ButtonExit}" Content="Anuluj" />

    </Grid>
</Window>