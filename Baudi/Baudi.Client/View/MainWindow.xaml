                            <RowDefinition Height="22*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <DataGrid Name="ExpensesList" ScrollViewer.CanContentScroll="True" AutoGenerateColumns="false" ItemsSource="{Binding ExpensesList}" SelectedItem="{Binding SelectedExpense}">
