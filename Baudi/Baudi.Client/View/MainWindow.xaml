<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:convertes="clr-namespace:Baudi.Client.Converters"
        Title="Aplikacja" Height="393.175" Width="632">
    <Window.Resources>
        <convertes:BoolToTextConverter x:Key="BoolConverter"/>

    </Window.Resources>

    <Grid>
        <TabControl TabStripPlacement="Left" Margin="0, 0, 0, 0" SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Name="NotificationsTab" Header="Zgłoszenia">
                <TabItem.Content>
                    <Grid Margin="10, 10, 10, 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="137*" />
                            <RowDefinition Height="22*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <DataGrid Name="NotificationsList" AutoGenerateColumns="false" ItemsSource="{Binding NotificationsList}" IsReadOnly="True" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding NotificationID}"/>
                                    <DataGridTextColumn Header="Data przyjecia" Width="Auto" Binding="{Binding FilingDate}"/>
                                    <DataGridTextColumn Header="Ostatnia zmiana" Width="Auto" Binding="{Binding LastChanged}"/>
                                    <DataGridTextColumn Header="Opis" Width="Auto" Binding="{Binding Description}"/>
                                    <DataGridTextColumn Header="Status" Width="Auto" Binding="{Binding Status}"/>
                                    <DataGridTextColumn Header="Przyjmujący" Width="Auto">
                                        <DataGridTextColumn.Binding>
                                            <MultiBinding StringFormat="{}{0} {1}">
                                                <Binding Path="Dispatcher.Name"/>
                                                <Binding Path="Dispatcher.Surname"/>
                                            </MultiBinding>
                                        </DataGridTextColumn.Binding>
                                    </DataGridTextColumn>

                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid/>
                        <Button Grid.Row="1" Width="70" Height="25" HorizontalAlignment="Right" Click="Button_Click_Zgloszenia" Margin="0,5,157,15" >Dodaj</Button>
                        <Button Grid.Row="1" Width="70" Height="25" HorizontalAlignment="Right" Click="Button_Click_Zgloszenia" Margin="0,5,7,15" >Edytuj</Button>
                        <Button Grid.Row="1" Width="70" Height="25" HorizontalAlignment="Right" Margin="0,5,82,15" >Usuń</Button>
                        <TextBox Grid.Row="1" Margin="0,5,232,15" Text="Wyszukaj" GotFocus="TextBox_GotFocus"></TextBox>
                    </Grid>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="CompaniesTab" Header="Firmy">
                <TabItem.Content>
                    <Grid Margin="10, 10, 10, 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="137*" />
                            <RowDefinition Height="22*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <DataGrid Name="CompaniesList" AutoGenerateColumns="false" ItemsSource="{Binding CompaniesList}" SelectedItem="{Binding SelectedCompany}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding CompanyID}"/>
                                    <DataGridTextColumn Header="Nazwa" Width="Auto" Binding="{Binding Name}"/>
                                    <DataGridTextColumn Header="Miejscowość" Width="Auto" Binding="{Binding City}"/>
                                    <DataGridTextColumn Header="Ulica" Width="Auto" Binding="{Binding Street}"/>
                                    <DataGridTextColumn Header="Numer domu" Width="Auto" Binding="{Binding HouseNumber}" />
                                    <DataGridTextColumn Header="Numer mieszkania" Width="Auto" Binding="{Binding LocalNumber}"/>
                                    <DataGridTextColumn Header="Właściciel" Width="Auto" Binding="{Binding Owner}"/>
                                    <DataGridTextColumn Header="NIP" Width="Auto" Binding="{Binding NIP}"/>
                                    <DataGridTextColumn Header="Telefon" Width="Auto" Binding="{Binding TelephoneNumber}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid/>
                        <Button Grid.Row="1" Width="70" Height="25" HorizontalAlignment="Right" Command="{Binding Button_Click_Add}" Margin="0,5,157,15" >Dodaj</Button>
                        <Button Grid.Row="1" Width="70" Height="25" HorizontalAlignment="Right" Command="{Binding Button_Click_Edit}" Margin="0,5,7,15" >Edytuj</Button>
                        <Button Grid.Row="1" Width="70" Height="25" HorizontalAlignment="Right" Margin="0,5,82,15" Click="Button_Click_Firma" Command="{Binding Button_Click_Delete}">Usuń</Button>
                        <TextBox Grid.Row="1" Margin="0,5,232,15" Text="Wyszukaj" GotFocus="TextBox_GotFocus"></TextBox>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem Name="OrdersTab" Header="Zlecenia">
                <TabItem.Content>
                    <Grid Margin="10, 10, 10, 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="137*" />
                            <RowDefinition Height="22*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <DataGrid Name="OrdersList" AutoGenerateColumns="false" ItemsSource="{Binding OrdersList}" SelectedItem="{Binding SelectedOrder}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding ExpenseTargetID}"/>
                                    <DataGridTextColumn Header="Status" Width="Auto" Binding="{Binding Status}"/>
                                    <DataGridTextColumn Header="Zmieniono" Width="Auto" Binding="{Binding LastChanged}"/>
                                    <DataGridTextColumn Header="Przyjęto" Width="Auto" Binding="{Binding FilingDate}"/>
                                    <DataGridTextColumn Header="Cena" Width="Auto" Binding="{Binding Cost}"/>
                                    <DataGridTextColumn Header="Typ zlecenia" Width="Auto" Binding="{Binding OrderType.Name}"/>
                                    <DataGridTextColumn Header="Firma" Width="Auto" Binding="{Binding Company.Name}"/>                                   
                                </DataGrid.Columns>
                            </DataGrid>
