<Window x:Class="Baudi.Client.View.EditWindows.CompanyEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OknoEdycjiFirmy" Height="284" Width="372" MinHeight="350" MinWidth="550">
    <Grid Margin="10, 10, 10, 10">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120" />
            <ColumnDefinition Width="*" MinWidth="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Height="26" Margin="0,6" Width="77">Miejscowość</Label>
        <TextBox Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Text="{Binding Company.City}" Margin="10,0,0,0" />

        <Label VerticalAlignment="Center"  HorizontalAlignment="Right" Grid.Row="1" Height="26" Margin="0,0,0,0" Width="45">Nazwa</Label>
        <TextBox Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="{Binding Company.Name}" Margin="10,0,0,0" />

        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2" Height="26" Margin="0,6,0,5" Width="62">Właściciel</Label>
        <TextBox Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Text="{Binding Company.Owner}" Margin="10,0,0,0" />
        
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Height="26" Margin="0,1" Width="29">NIP</Label>
        <TextBox Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Text="{Binding Company.NIP}" Margin="10,0,0,0" />
        
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4" Height="26" Margin="0,1,0,3" Width="40">Ulica</Label>
        <TextBox Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" Text="{Binding Company.Street}" Margin="10,0,0,0" />
        
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="5" Height="26" Margin="0,2" Width="60">Nr Domu</Label>
        <TextBox Grid.Row="5" TextWrapping="Wrap" Margin="10,0,0,0" Text="{Binding Company.HouseNumber}" Grid.Column="1" HorizontalAlignment="Left" Width="127" />
        <Label VerticalAlignment="Center" Grid.Row="5" Height="26" Margin="0,2,141,2" Grid.Column="1" HorizontalAlignment="Right" Width="95">Nr Mieszkania</Label>
        <TextBox Grid.Column="1" Grid.Row="5" TextWrapping="Wrap" Text="{Binding Company.LocalNumber}" HorizontalAlignment="Right" Width="136" />        
        
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="6" Height="26" Margin="0,2,0,3" Width="52">Telefon</Label>
        <TextBox Grid.Column="1" Grid.Row="6" TextWrapping="Wrap" Text="{Binding Company.TelephoneNumber}" Margin="10,0,0,0" />
        
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="7" Height="26" Margin="0,9,10,6" Width="75">Specjalności</Label>
        <ComboBox Grid.Column="1" Margin="10,9,10,0" Grid.Row="7" VerticalAlignment="Top" Height="25" ItemsSource="{Binding Specialization}" />
        
        <Button Grid.Column="1" Grid.Row="8" Margin="0,0,110,10" Height="23" HorizontalAlignment="Right" Width="80" VerticalAlignment="Bottom" Command="{Binding ButtonSave}">Zapisz</Button>
        <Button Grid.Column="1" Grid.Row="8" Margin="0,0,10,10" Width="80" Height="23" HorizontalAlignment="Right" VerticalAlignment="Bottom" Command="{Binding ButtonCancel}">Anuluj</Button>
        
        
        
        
        
        
        
        
        
        
    </Grid>
</Window>