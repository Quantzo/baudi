<Window x:Class="Baudi.Client.View.EditWindows.NotificationEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OknoEdycjiZgloszenia" Height="438" Width="577" MinHeight="400" MinWidth="500">
    <Grid Margin="10, 10, 10, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120" />
            <ColumnDefinition Width="*" MinWidth="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="27" />
            <RowDefinition Height="200*" />
            <RowDefinition Height="23" />
            <RowDefinition Height="23" />
            <RowDefinition Height="*" MinHeight="40" />
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Width="33" Height="26" Margin="0,-2,10,0">Imię</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Width="60" Height="26" Margin="0,20,0,0"
               Grid.RowSpan="2">
            Nazwisko
        </Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2">Mieszkaniec</Label>
        <Label VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="3">Opis zgłoszenia</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4" Height="23" Margin="0,0,10,0"
               Width="42">
            Status
        </Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="5" Height="23">Właściciel</Label>
        <Button Grid.Column="1" Grid.Row="6" Margin="0,0,110,10" Width="80" Click="Button_Click"
                HorizontalAlignment="Right" Height="23" VerticalAlignment="Bottom">
            Zapisz
        </Button>
        <Button Grid.Column="1" Grid.Row="6" Margin="0,0,10,10" Width="80" Click="Button_Click_1"
                HorizontalAlignment="Right" Height="23" VerticalAlignment="Bottom">
            Anuluj
        </Button>
        <TextBox Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Margin="5,0,0,0" />
        <TextBox Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Margin="5,0,0,0" />
        <TextBox Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Margin="5,5,0,5" />
        <TextBox Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Margin="95,0,0,0" IsEnabled="False" />
        <Button Content="Wybierz" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="80" Height="22" Click="Button_Click" Margin="5,2,0,0" />
        <ComboBox Grid.Column="1" Grid.Row="4" Margin="5,0,200,0" />
        <ComboBox Grid.Column="1" Grid.Row="5" Margin="5,0,200,0" />
    </Grid>
</Window>