<Window x:Class="Baudi.Client.View.EditWindows.PersonEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PersonEditWindow" Height="300" MinHeight="300" Style="{StaticResource WindowStyle}">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="290*" />
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Label Style="{StaticResource LabelStyle}" Content="Imię" />
        <TextBox Style="{StaticResource TextBoxStyle}" Grid.ColumnSpan="3" Grid.Column="1" Text="{Binding Person.Name}" />

        <Label Style="{StaticResource LabelStyle}" Grid.Row="1" Content="Nazwisko" />
        <TextBox Style ="{StaticResource TextBoxStyle}" Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="1" Text="{Binding Person.Surname}" />

        <Label Style="{StaticResource LabelStyle}" Grid.Row="2" Content="Pesel" />
        <TextBox Style="{StaticResource TextBoxStyle}" Grid.ColumnSpan="3" Grid.Row="2" Grid.Column="1" Text="{Binding Person.PESEL}" />

        <Label Style="{StaticResource LabelStyle}" Grid.Row="3" Content="Miejscowość" />
        <TextBox Style="{StaticResource TextBoxStyle}" Grid.ColumnSpan="3" Grid.Row="3" Grid.Column="1" Text="{Binding Person.City}" />

        <Label Style="{StaticResource LabelStyle}" Grid.Row="4" Content="Ulica" />
        <TextBox Style="{StaticResource TextBoxStyle}" Grid.ColumnSpan="3" Grid.Row="4" Grid.Column="1" Text="{Binding Person.Street}" />

        <Label Style="{StaticResource LabelStyle}" Grid.Row="5" Content="Numer domu" />
        <TextBox Style="{StaticResource TextBoxStyle}" Grid.Row="5" Grid.Column="1" Text="{Binding Person.HouseNumber}" />

        <Label Style="{StaticResource LabelStyle}" Grid.Column="2" Grid.Row="5" Content="Numer mieszkania" />
        <TextBox Style ="{StaticResource TextBoxStyle}" Grid.Row="5" Grid.Column="3" Text="{Binding Person.LocalNumber}" />

        <Label Style="{StaticResource LabelStyle}" Grid.Row="6" Content="Numer telefonu" />
        <TextBox Style="{StaticResource TextBoxStyle}" Grid.Row="6" Grid.ColumnSpan="3" Grid.Column="1" Text="{Binding Person.Telephone}" />

        <Button Style="{StaticResource SaveButton}" Grid.Row="7" Grid.ColumnSpan="3" Grid.Column="1"  Command="{Binding ButtonSave}" Content="Zapisz" />
        <Button Style="{StaticResource CancelButton}" Grid.Row="7" Grid.ColumnSpan="3" Grid.Column="1" Command="{Binding ButtonCancel}" Content="Anuluj" />
    </Grid>
</Window>