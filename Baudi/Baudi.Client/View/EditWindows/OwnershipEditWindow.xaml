<Window x:Class="GUIBD.OwnershipEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OwnershipEditWindow" Height="214" Width="530.266">
    <Grid Margin="10, 10, 10, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*" />
            <ColumnDefinition Width="312*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,0,1">Budynek</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,1,0,0" Grid.Row="2">Lokal</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Margin="0,2,0,26" Grid.RowSpan="2">Data kupna</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4" Margin="0,1,0,0">Data sprzedaży</Label>
        <Button Grid.Column="1" Grid.Row="5" Margin="309,5,10,-2" Width="80" Height="23" Command="{Binding Button_Click_Save}">Zapisz</Button>
        <Button Grid.Column="1" Grid.Row="5" Margin="224,5,95,-2" Width="80" Height="23" Command="{Binding Button_Click_Cancel}">Anuluj</Button>
        <DataGrid Grid.Column="1" AutoGenerateColumns="false" ItemsSource="{Binding LocalsList, IsAsync=True}"  Margin="102,10,-7,26" Grid.RowSpan="3" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding LocalID}"/>
                <DataGridTextColumn Header="Numer Mieszkania" Width="Auto" Binding="{Binding LocalNumber}"/>
                <DataGridTextColumn Header="Liczba pokoi" Width="Auto" Binding="{Binding NumberOfRooms}"/>
                <DataGridTextColumn Header="Powierzchnia" Width="Auto" Binding="{Binding Area}"/>
                <DataGridTextColumn Header="Czynsz" Width="Auto" Binding="{Binding RentValue}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Wybierz" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="23" Command="{Binding Button_Click_SelectLocal}" Margin="0,4,0,0" Grid.Row="2"/>
        <Button Content="Wybierz" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="23" Command="{Binding Button_Click_SelectBuilding}"/>
        <Grid Margin="0,3,0,25" RenderTransformOrigin="0.786,5.173" Grid.RowSpan="2">
            <DataGrid Name="BuildingsList" ItemsSource="{Binding BuildingsList, IsAsync=True}" AutoGenerateColumns="false" SelectedItem="{Binding SelectedBuilding}" Margin="190,-3,-399,-13" Height="43" VerticalAlignment="Top">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding BuildingID}"/>
                    <DataGridTextColumn Header="Miejscowość" Width="Auto" Binding="{Binding City}"/>
                    <DataGridTextColumn Header="Numer" Width="Auto" Binding="{Binding HouseNumber}"/>
                    <DataGridTextColumn Header="Ulica" Width="Auto" Binding="{Binding Street}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="0,1,0,0" Grid.Row="3" VerticalAlignment="Top" Width="166" SelectedDate="{Binding PurchaseDate}" Text="{Binding SaleDate}"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="26" Grid.Row="4" VerticalAlignment="Top" Width="166" SelectedDate="{Binding SaleDate}"/>
    </Grid>
</Window>
