<Window x:Class="GUIBD.OwnershipEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OwnershipEditWindow" Height="464.6" Width="530.266">
    <Grid Margin="10, 10, 10, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*" />
            <ColumnDefinition Width="312*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,0,1">Budynek</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,1,0,0" Grid.Row="2">Lokal</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Margin="0,2,0,26" Grid.RowSpan="2">Data kupna</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4" Margin="0,1,0,0">Data sprzedaży</Label>
        <Button Grid.Column="1" Grid.Row="5" Margin="309,5,10,-2" Width="80" Height="23" Command="{Binding Button_Click_Save}">Zapisz</Button>
        <Button Grid.Column="1" Grid.Row="5" Margin="224,5,95,-2" Width="80" Height="23" Command="{Binding Button_Click_Cancel}">Anuluj</Button>
        <Button Content="Wybierz" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="23" Command="{Binding Button_Click_SelectLocal}" Margin="10,22,0,0" Grid.Row="2"/>
        <Button Content="Wybierz" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="23" Command="{Binding Button_Click_SelectBuilding}" Margin="5,21,0,0"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="5,27,0,0" Grid.Row="3" VerticalAlignment="Top" Width="166" SelectedDate="{Binding PurchaseDate}" Text="{Binding SaleDate}"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="26" Grid.Row="4" VerticalAlignment="Top" Width="166" SelectedDate="{Binding SaleDate}" Margin="0,22,0,0"/>

        <DataGrid Grid.Column="1" AutoGenerateColumns="false" ItemsSource="{Binding LocalsList, IsAsync=True, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}"  Margin="102,65,-7,4" Grid.RowSpan="2" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding LocalID}"/>
                <DataGridTextColumn Header="Numer Mieszkania" Width="Auto" Binding="{Binding LocalNumber}"/>
                <DataGridTextColumn Header="Liczba pokoi" Width="Auto" Binding="{Binding NumberOfRooms}"/>
                <DataGridTextColumn Header="Powierzchnia" Width="Auto" Binding="{Binding Area}"/>
                <DataGridTextColumn Header="Czynsz" Width="Auto" Binding="{Binding RentValue}"/>
            </DataGrid.Columns>
        </DataGrid>
       
        <DataGrid Name="BuildingsList" ItemsSource="{Binding BuildingsList, IsAsync=True}" AutoGenerateColumns="false" SelectedItem="{Binding SelectedBuilding}" Height="69" VerticalAlignment="Top"  Grid.Row="0" Margin="102,0,-7,0" Grid.Column="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding BuildingID}"/>
                <DataGridTextColumn Header="Miejscowość" Width="Auto" Binding="{Binding City}"/>
                <DataGridTextColumn Header="Numer" Width="Auto" Binding="{Binding HouseNumber}"/>
                <DataGridTextColumn Header="Ulica" Width="Auto" Binding="{Binding Street}"/>
            </DataGrid.Columns>
        </DataGrid>
       
    </Grid>
</Window>
