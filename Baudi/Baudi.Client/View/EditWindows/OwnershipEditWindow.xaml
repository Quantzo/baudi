<Window x:Class="GUIBD.OwnershipEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OwnershipEditWindow"  Height="306" Width="615" MinWidth="500" MinHeight="400">
    <Grid Margin="10, 10, 10, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120" />
            <ColumnDefinition Width="*" MinWidth="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="80"/>
            <RowDefinition Height="*" MinHeight="80"/>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0" RenderTransformOrigin="0.643,-0.038">Budynek</Label>
        <Label VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0" Grid.Row="1">Lokal</Label>
        <Label HorizontalAlignment="Right" Grid.Row="2" Margin="0,6,10,4">Data kupna</Label>
        <Label HorizontalAlignment="Right" Grid.Row="3" Margin="0,9,10,0">Data sprzedaży</Label>
        <Button Grid.Column="1" Grid.Row="5" Margin="0,0,117,6" Width="80" Height="23" Command="{Binding Button_Click_Save}" HorizontalAlignment="Right" VerticalAlignment="Bottom">Zapisz</Button>
        <Button Grid.Column="1" Grid.Row="5" Margin="0,0,17,6" Width="80" Height="23" Command="{Binding Button_Click_Cancel}" HorizontalAlignment="Right" VerticalAlignment="Bottom">Anuluj</Button>
        <Button Content="Wybierz" Grid.Column="1" Command="{Binding Button_Click_SelectLocal}" Margin="10,11,0,0" Grid.Row="1" HorizontalAlignment="Left" Width="80" Height="23" VerticalAlignment="Top"/>
        <Button Content="Wybierz" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="23" Command="{Binding Button_Click_SelectBuilding}" Margin="10,10,0,0" RenderTransformOrigin="0.612,0.609"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="10,7,0,0" Grid.Row="2" VerticalAlignment="Top" Width="166" SelectedDate="{Binding PurchaseDate}" Text="{Binding SaleDate}"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="26" Grid.Row="3" VerticalAlignment="Top" Width="166" SelectedDate="{Binding SaleDate}" Margin="10,9,0,0"/>

        <DataGrid Grid.Column="1" AutoGenerateColumns="false" ItemsSource="{Binding LocalsList, IsAsync=True, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}"  Margin="95,10,10,10" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding LocalID}"/>
                <DataGridTextColumn Header="Numer Mieszkania" Width="Auto" Binding="{Binding LocalNumber}"/>
                <DataGridTextColumn Header="Liczba pokoi" Width="Auto" Binding="{Binding NumberOfRooms}"/>
                <DataGridTextColumn Header="Powierzchnia" Width="Auto" Binding="{Binding Area}"/>
                <DataGridTextColumn Header="Czynsz" Width="Auto" Binding="{Binding RentValue}"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Name="BuildingsList" ItemsSource="{Binding BuildingsList, IsAsync=True}" AutoGenerateColumns="false" SelectedItem="{Binding SelectedBuilding}"  Grid.Row="0" Margin="97,0,10,10" Grid.Column="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding BuildingID}"/>
                <DataGridTextColumn Header="Miejscowość" Width="Auto" Binding="{Binding City}"/>
                <DataGridTextColumn Header="Numer" Width="Auto" Binding="{Binding HouseNumber}"/>
                <DataGridTextColumn Header="Ulica" Width="Auto" Binding="{Binding Street}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
