<Window x:Class="GUIBD.LocalEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OknoEdycjiLokalu"   Height="300" Width="600" MinHeight="300" MinWidth="500">
    <Grid Margin="10, 10, 10, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120"/>
            <ColumnDefinition Width="*" MinWidth="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Height="26" HorizontalContentAlignment="Right" >Numer lokalu</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" Height="26" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch">Czynsz</Label>
        <Label VerticalAlignment="Center" Grid.Row="2" Height="26" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch" Margin="0,7,0,8" HorizontalAlignment="Right" Width="76" >Liczba Pokoi</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Height="26" HorizontalContentAlignment="Right" >Powierzchnia</Label>
        <Button Grid.Column="1" Grid.Row="5" Margin="0,0,110,10" Width="80" Height="23" Command="{Binding Button_Click_Save}" HorizontalAlignment="Right" VerticalAlignment="Bottom" MinWidth="1">Zapisz</Button>
        <Button Grid.Column="1" Grid.Row="5" Margin="0,0,10,10" Width="80" Height="23" Command="{Binding Button_Click_Cancel}" HorizontalAlignment="Right" VerticalAlignment="Bottom">Anuluj</Button>
        <TextBox Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Text="{Binding LocalNumber}"/>
        <TextBox Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="{Binding RentValue}"/>
        <TextBox Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Text="{Binding NumberOfRooms}"/>
        <TextBox Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Text="{Binding Area}"/>
    </Grid>
</Window>
