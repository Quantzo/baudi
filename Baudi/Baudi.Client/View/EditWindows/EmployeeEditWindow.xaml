<Window x:Class="Baudi.Client.View.EditWindows.EmployeeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OknoEdycjiPracownika" Height="529" Width="632" MinHeight="500" MinWidth="500">
    <Grid Margin="10, 10, 10, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120" />
            <ColumnDefinition Width="*" MinWidth="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Label Name="ImieLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Height="26" Margin="0,8,3,0"
               HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch">
            Imię
        </Label>
        <Label Name="NazwiskoLabel" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="1" Height="26"
               Margin="0,5,0,0" Width="60" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch">
            Nazwisko
        </Label>
        <Label Name="MiejscowoscLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2" Height="26"
               Margin="0,4" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch">
            PESEL
        </Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="5" Height="26" Margin="0,2,3,2"
               HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch">
            Numer Domu
        </Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Height="26" Margin="0,9,0,1"
               HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch">
            Miejscowość
        </Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="5" Height="26" Margin="0,4,168,4"
               Grid.Column="1" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch">
            Numer Mieszkania
        </Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4" Height="26" Margin="0,7,3,3">Ulica</Label>
        <Label HorizontalAlignment="Right" Grid.Row="2" Height="26" Margin="0,0,173,4" Width="86"
               VerticalAlignment="Bottom" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch"
               Grid.Column="1">
            Nr Telefonu
        </Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="6" Height="26" Margin="0,2,0,3"
               HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch">
            Nr Konta
        </Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="7" Height="26" Margin="0,2,0,3"
               HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch">
            Pensja
        </Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="8" Height="26" Margin="0,3,0,1"
               Content="Jest właścicielem" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch" />
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="9" Height="26" Margin="-1,4,0,1"
               IsEnabled="False" Content="Posiadanie" HorizontalContentAlignment="Right"
               VerticalContentAlignment="Stretch" />
        <Button Grid.Column="1" Grid.Row="13" Margin="0,0,111,4" Width="80" Height="23"
                Command="{Binding Button_Click_Save}" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            Zapisz
        </Button>
        <Button Grid.Column="1" Grid.Row="13" Margin="0,0,11,4" Width="80" Height="23"
                Command="{Binding Button_Click_Cancel}" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            Anuluj
        </Button>
        <TextBox Name="ImieBox" Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Text="{Binding Name}"
                 Margin="10,0,3,5" />
        <TextBox Name="NazwiskoBox" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="{Binding Surname}"
                 Margin="10,5,3,5" />
        <TextBox Name="MiejscowoscBox" Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Margin="10,9,3,0"
                 Text="{Binding PESEL}" Height="25" VerticalAlignment="Top" />
        <TextBox Name="NrMieszkaniaBox" Grid.Column="1" Grid.Row="5" TextWrapping="Wrap" Margin="0,0,3,0"
                 Text="{Binding Telephone}" HorizontalAlignment="Right" Width="165" />
        <TextBox Grid.Column="1" Grid.Row="6" TextWrapping="Wrap" Text="{Binding BankAccountNumber}" Margin="10,5,3,5" />
        <TextBox Grid.Column="1" Grid.Row="7" TextWrapping="Wrap" Text="{Binding Salary}" Margin="10,4,3,6" />
        <TextBox Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" Margin="10,6,3,3" Text="{Binding Street}" />
        <TextBox Grid.Row="5" TextWrapping="Wrap" Margin="10,5,318,5" Text="{Binding HouseNumber}" Grid.Column="1" />
        <CheckBox Name="JestMieszkancemBox" Grid.Column="1" Margin="14,10,0,0" Grid.Row="8" VerticalAlignment="Top"
                  Checked="CheckBoxChanged" Unchecked="CheckBoxChanged" RenderTransformOrigin="2.231,0.538"
                  HorizontalAlignment="Left" Width="13" />

        <DataGrid Grid.Column="1" Grid.Row="9" Grid.RowSpan="3" AutoGenerateColumns="false"
                  ItemsSource="{Binding OwnershipsList, IsAsync=True}" SelectedItem="{Binding SelectedOwnership}"
                  Margin="10,0,3,0" Height="101" VerticalAlignment="Bottom">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding OwnershipID}" />
                <DataGridTextColumn Header="Lokal" Width="Auto" Binding="{Binding LocalID}" />
                <DataGridTextColumn Header="Data kupna" Width="Auto" Binding="{Binding PurchaseDate}" />
                <DataGridTextColumn Header="Data Sprzedaży" Width="Auto" Binding="{Binding SaleDate}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Column="1" Grid.Row="12" Margin="0,0,111,4" Command="{Binding Button_Click_Edit}" Width="80"
                Height="23" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            Edytuj
        </Button>
        <Button Grid.Column="1" Grid.Row="12" Margin="0,0,11,4" Width="80" Height="23" HorizontalAlignment="Right"
                Command="{Binding Button_Click_Delete}" VerticalAlignment="Bottom">
            Usun
        </Button>
        <Button Grid.Column="1" Grid.Row="12" Margin="0,0,209,4" Command="{Binding Button_Click_Add}" Width="80"
                Height="23" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            Dodaj
        </Button>
    </Grid>
</Window>