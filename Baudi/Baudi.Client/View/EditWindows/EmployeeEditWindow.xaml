<Window x:Class="WpfApplication1.EmployeeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OknoEdycjiPracownika" Height="450.373" Width="530.266">
    <Grid Margin="10, 10, 10, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*" />
            <ColumnDefinition Width="393*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Label Name="ImieLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Height="26" Margin="0,2">Imię</Label>
        <Label Name="NazwiskoLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" Height="26" Margin="0,2" Width="60">Nazwisko</Label>
        <Label Name="MiejscowoscLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Height="26" Margin="0,2,3,3">PESEL</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="5" Height="26" Margin="0,2,3,2">Numer Domu</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2" Height="26" Margin="0,2,0,3">Miejscowość</Label>
        <Label  VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Height="26" Margin="0,2,129,3" Grid.Column="1">Numer Mieszkania</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4" Height="26" Margin="0,4,390,0" Grid.ColumnSpan="2">Ulica</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="5" Height="26" Margin="0,2,149,2" Width="86" Grid.Column="1">Nr Telefonu</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="6" Height="26" Margin="0,2,0,3">Nr Konta</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="7" Height="26" Margin="0,2,0,3">Pensja</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="8" Height="26" Margin="0,3,0,1" Content="Jest właścicielem"/>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="9" Height="26" Margin="-1,4,0,1" IsEnabled="False" Content="Posiadanie"/>
        <Button Grid.Column="1" Grid.Row="13" Margin="313,0,0,5" Width="80" Height="23" Command="{Binding Button_Click_Save}">Zapisz</Button>
        <Button Grid.Column="1" Grid.Row="13" Margin="217,0,96,5" Width="80" Height="23" Command="{Binding Button_Click_Cancel}">Anuluj</Button>
        <TextBox Name="ImieBox" Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Text="{Binding Name}"/>
        <TextBox Name="NazwiskoBox" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="{Binding Surname}"/>
        <TextBox Name="MiejscowoscBox" Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Margin="0,0,242,0" Text="{Binding PESEL}"/>
        <TextBox Name="NrMieszkaniaBox" Grid.Column="1" Grid.Row="5" TextWrapping="Wrap" Margin="255,0,0,0" Text="{Binding Telephone}"/>
        <TextBox Grid.Column="1" Grid.Row="6" TextWrapping="Wrap" Text="{Binding BankAccountNumber}"/>
        <TextBox Grid.Column="1" Grid.Row="7" TextWrapping="Wrap" Text="{Binding Salary}"/>
        <TextBox Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Margin="0,0,0,1" Text="{Binding City}"/>
        <TextBox Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Margin="269,2,10,29" Grid.RowSpan="2" Text="{Binding LocalNumber}"/>
        <TextBox Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" Margin="0,2,0,28" Grid.RowSpan="2" Text="{Binding Street}"/>
        <TextBox Grid.Row="5" TextWrapping="Wrap" Margin="2,2,240,28" Grid.RowSpan="2" Text="{Binding HouseNumber}" Grid.Column="1"/>
        <CheckBox Name="JestMieszkancemBox" Grid.Column="1" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="8" VerticalAlignment="Top" Checked="CheckBoxChanged" Unchecked="CheckBoxChanged"/>

        <DataGrid Grid.Column="1" Grid.Row="9" Grid.RowSpan="3" AutoGenerateColumns="false" ItemsSource="{Binding OwnershipsList, IsAsync=True}" SelectedItem="{Binding SelectedOwnership}" Margin="10,0,-10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding OwnershipID}"/>
                <DataGridTextColumn Header="Lokal" Width="Auto" Binding="{Binding LocalID}"/>
                <DataGridTextColumn Header="Data kupna" Width="Auto" Binding="{Binding PurchaseDate}"/>
                <DataGridTextColumn Header="Data Sprzedaży" Width="Auto" Binding="{Binding SaleDate}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Column="1" Grid.Row="12" Margin="0,0,96,6" Command="{Binding Button_Click_Edit}" Width="80" Height="23" HorizontalAlignment="Right">Edytuj</Button>
        <Button Grid.Column="1" Grid.Row="12" Margin="0,0,200,6" Width="80" Height="23" HorizontalAlignment="Right" Command="{Binding Button_Click_Delete}">Usun</Button>
        <Button Grid.Column="1" Grid.Row="12" Margin="0,0,303,6" Command="{Binding Button_Click_Add}" Width="80" Height="23" HorizontalAlignment="Right">Dodaj</Button>
    </Grid>
</Window>
