<Window x:Class="GUIBD.OknoEdycjiZleceniaStale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OknoEdycjiZleceniaStale"  Height="235" Width="600" MinHeight="280" MinWidth="500">
    <Grid Margin="10, 10, 10, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120" />
            <ColumnDefinition Width="*" MinWidth="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40"/>
            <RowDefinition Height="*" MinHeight="40"/>


        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Height="26" Margin="0,2" Width="37" >Cena</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" Height="26" Margin="0,2" Width="108">Częstotliwość prac</Label>
        <Label VerticalAlignment="Center" Grid.Row="2" Height="26" Margin="0,9,0,10" HorizontalAlignment="Right" Width="112">Częstotliwość opłat</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Height="26" Margin="0,2" Width="39">Firma</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4" Height="26" Margin="0,2" Width="56">Budynek</Label>
        <Button Grid.Column="1" Grid.Row="5" Width="80" Height="23" Margin="0,0,110,10" Click="Button_Click_1" HorizontalAlignment="Right" VerticalAlignment="Bottom">Zapisz</Button>
        <Button Grid.Column="1" Grid.Row="5" Width="80" Height="23" Margin="0,0,10,10" Click="Button_Click_1" HorizontalAlignment="Right" VerticalAlignment="Bottom">Anuluj</Button>
        <TextBox Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Height="30" VerticalAlignment="Bottom" Margin="5,0,0,0"/>
        <TextBox Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Height="30" VerticalAlignment="Bottom" Margin="5,0,0,0"/>
        <TextBox Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Margin="5,0,0,0"/>
        <TextBox Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Margin="95,0,0,0" IsEnabled="False"/>
        <Button Content="Wybierz" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="80" Height="22" Click="Button_Click" Margin="10,0,0,9"/>
        <TextBox Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" Margin="95,0,0,0" IsEnabled="False"/>
        <Button Content="Wybierz" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="80" Height="23" Click="Button_Click" Margin="10,0,0,12"/>
    </Grid>
</Window>
