<Window x:Class="GUIBD.BuildingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BuildingEditWindow"  Height="307" Width="443" MinHeight="400" MinWidth="500">
    <Grid Margin="10, 10, 10, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*" />
            <ColumnDefinition Width="393*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="30" />
            <RowDefinition Height="30"/>
            <RowDefinition Height="31" />
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Height="26" Margin="0,2" Width="77" >Miejscowość</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" Height="26" Margin="0,2" Width="47">Numer</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2" Height="26" Margin="0,2" Width="36" >Ulica</Label>
        <Label VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="3" Height="29" Width="45" >Lokale</Label>
        <Button Grid.Column="1" Grid.Row="5" Margin="0,28,110,10" Height="23" Command="{Binding Button_Click_Save}" VerticalAlignment="Center" HorizontalAlignment="Right" Width="80" Grid.RowSpan="2">Zapisz</Button>
        <Button Grid.Column="1" Grid.Row="5" Margin="0,28,10,10" Height="23" Command="{Binding Button_Click_Cancel}" HorizontalAlignment="Right" Width="80" Grid.RowSpan="2">Anuluj</Button>
        <Button Grid.Column="1" Grid.Row="4" Margin="0,5,210,2" Width="80" Height="23" Command="{Binding Button_Click_Add}" HorizontalAlignment="Right">Dodaj</Button>
        <Button Grid.Column="1" Grid.Row="4" Margin="0,5,10,2" Width="80" Height="23" Command="{Binding Button_Click_Delete}" HorizontalAlignment="Right">Usuń</Button>
        <Button Grid.Column="1" Grid.Row="4" Margin="0,5,110,2" Command="{Binding Button_Click_Edit}" Width="80" Height="23" HorizontalAlignment="Right" RenderTransformOrigin="2.625,0.435" >Edytuj</Button>
        <TextBox Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" Text="{Binding City}"/>
        <TextBox Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="{Binding HouseNumber}"/>
        <TextBox Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Text="{Binding Street}"/>
        <DataGrid ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.Column="1" Grid.Row="3"  AutoGenerateColumns="false" ItemsSource="{Binding LocalsList, IsAsync=True}" SelectedItem="{Binding SelectedLocal}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="Auto" Binding="{Binding LocalID}"/>
                <DataGridTextColumn Header="Numer Mieszkania" Width="Auto" Binding="{Binding LocalNumber}"/>
                <DataGridTextColumn Header="Liczba pokoi" Width="Auto" Binding="{Binding NumberOfRooms}"/>
                <DataGridTextColumn Header="Powierzchnia" Width="Auto" Binding="{Binding Area}"/>
                <DataGridTextColumn Header="Czynsz" Width="Auto" Binding="{Binding RentValue}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
