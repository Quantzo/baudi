<Window x:Class="Baudi.Client.View.EditWindows.OrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OknoEdycjiZlecenia" Height="241" Width="647" MinHeight="300" MinWidth="500">
    <Grid Margin="10, 10, 10, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="120" />
            <ColumnDefinition Width="*" MinWidth="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />

            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Height="26">Status</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" Height="26">Cena</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2" Height="26">Typ</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="3" Height="26">Firma</Label>
        <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4" Height="26">Zgłoszenie</Label>
        <Button Grid.Column="1" Grid.Row="6" Margin="0,0,110,10" Width="80" Height="23" 
                VerticalAlignment="Bottom" HorizontalAlignment="Right">
            Zapisz
        </Button>
        <Button Grid.Column="1" Grid.Row="6" Margin="0,0,10,10" Width="80" Height="23" 
                VerticalAlignment="Bottom" HorizontalAlignment="Right">
            Anuluj
        </Button>
        <TextBox Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" />
        <TextBox Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" />
        <TextBox Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" />
        <TextBox Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Margin="95,0,0,0" IsEnabled="False" />
        <Button Content="Wybierz" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="80" Height="23"  Margin="5,7,0,0" />
        <TextBox Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" Margin="95,0,0,0" IsEnabled="False" />
        <Button Content="Wybierz" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="80" Height="23"  Margin="5,7,0,0" />
    </Grid>
</Window>